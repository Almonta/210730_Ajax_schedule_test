<ul>
  <% schedules.each do |schedule| %>
    <% if schedule.id.present? %>
      <li>
        <div class="schedule-content" id ="this_schedule_<%= schedule.id %>"></div>
        <p><%= schedule.serial_number %></p>
        <p><%= schedule.line_on %></p>
        <p><%= link_to "編集", edit_blog_schedule_path(blog, schedule), remote: true %></p>
        <p><%= link_to "削除", blog_schedule_path(schedule.blog_id, schedule.id), method: :delete, remote: true,
                              data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>